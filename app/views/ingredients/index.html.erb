<h1>Listing ingredients</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.name %></td>
    <td><%= ingredient.price %></td>
    <td><%= link_to 'Show', ingredient, :class => 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_ingredient_path(ingredient), :class => 'btn btn-success' %></td>
    <td><%= link_to 'Destroy', ingredient, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ingredient', new_ingredient_path, :class => 'btn btn-primary' %>
