<h1>Listing pizzas</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pizzas.each do |pizza| %>
  <tr>
    <td><%= pizza.name %></td>
    <td><%= pizza.description %></td>
    <td><%= pizza.price %></td>
    <td><%= link_to 'Show', pizza, :class => 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_pizza_path(pizza), :class => 'btn btn-success' %></td>
    <td><%= if can? :destroy, pizza then (link_to 'Destroy', pizza, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger') end %></td>
    <td>
      <% if can? :make, Order then %>
        <%= render :partial => 'orders/inline_order', :locals => { :pizza => pizza } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Pizza', new_pizza_path, :class => 'btn btn-primary' %>
